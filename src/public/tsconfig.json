{
  "compilerOptions": {
    "outDir": "../../dist/compiled/tsc",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "../../",
    "paths": {
      "@blocks/*": ["src/public/components/blocks/*"],
      "@components/*": ["src/public/components/*"],
      "@svg/*": ["src/public/svg/*"],
      "@i18next": ["i18n/i18next.config.ts"]
    }
  },
  "include": ["./**/*.ts", "../../i18n/i18next.config.ts"],
}
