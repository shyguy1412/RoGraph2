{
  "compilerOptions": {
    "outDir": "../../dist/compiled/tsc",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "../",
    "paths": {
      "@blocks/*": ["public/components/blocks/*"],
      "@components/*": ["public/components/*"],
      "@svg/*": ["public/svg/*"],
    }
  },
  "include": ["./**/*.ts"],
}
